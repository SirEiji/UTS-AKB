<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="20dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="W E L C O M E"
        android:textSize="30sp"
        android:fontFamily="@font/glacial_bold" />

    <ImageView
        android:id="@+id/foto"
        android:layout_width="227dp"
        android:layout_height="164dp"
        android:layout_below="@id/text_home"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="23dp"
        android:src="@drawable/me" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_below="@id/foto"
        android:layout_gravity="left"
        android:paddingTop="20dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/namaku"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:fontFamily="@font/glacial_regular"
        android:text="ARHAM JUSNI INDRAWAN"
        android:textSize="20dp"
        android:textColor="#3F51B5"/>

    <ImageView
        android:id="@+id/nim"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_below="@id/namaku"
        android:layout_gravity="left"
        android:layout_marginTop="-5dp"
        android:paddingTop="20dp"
        android:src="@drawable/nim" />

    <TextView
        android:id="@+id/nimku"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:fontFamily="@font/glacial_regular"
        android:text="10119234"
        android:textSize="20dp"
        android:textColor="#3F51B5"/>

    <ImageView
        android:id="@+id/kelas"
        android:layout_width="55dp"
        android:layout_height="66dp"
        android:layout_below="@id/nimku"
        android:layout_gravity="left"
        android:layout_marginTop="-5dp"
        android:paddingTop="20dp"
        android:src="@drawable/kelas" />

    <TextView
        android:id="@+id/kelasku"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/kelas"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:fontFamily="@font/glacial_regular"
        android:text="IF-6"
        android:textSize="20dp"
        android:textColor="#3F51B5"/>

    <ImageView
        android:id="@+id/email"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_below="@id/kelasku"
        android:layout_gravity="left"
        android:layout_marginTop="-5dp"
        android:paddingTop="20dp"
        android:src="@drawable/mail" />

    <TextView
        android:id="@+id/emailku"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:fontFamily="@font/glacial_regular"
        android:text="arham.10119234@mahasiswa.unikom.ac.id"
        android:textSize="20dp"
        android:textColor="#3F51B5"/>

</RelativeLayout>